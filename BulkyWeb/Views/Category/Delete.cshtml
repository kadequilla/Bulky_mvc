@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<form method="post">
    <div class="border p-5 mt-4">
        <input asp-for="CategoryId" hidden />
        <div class="row pb-2">
            <h3 class="text-primary">Are you sure you want to delete this Category?</h3>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"> </label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    <i class="bi bi-check-lg"></i> Yes, Delete!
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</form>